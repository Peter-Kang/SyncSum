

<div class="col profile-col2">
  <h3>Candidates</h3>
  <% if @candidates.empty? %>
    <p>No candidates.</p>
  <% else %>
    <% @candidates.each do |candidate| %>
      <div class = "content-container">
        <p>Name: <%= candidate.full_name %></p>
        <p>Employment Status: <%= candidate.employment_status.length > 20 ? "Unemployed" : candidate.employment_status  %> </p>
      </div>
    <% end %>
  <% end %>
</div>
