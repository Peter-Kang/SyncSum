/view/questions/show.html.erb
<p id="notice"><%= notice %></p>

<p>
  <b>Question:</b>
  <%= @question.question %>
</p>
<p>
  <b>Importance:</b>
  <%= @question.importance.level %>
</p>
<p>
  <b>Employer:</b>
  <%= @question.employer.name %>
</p>

<p>
  <ul>
    <% @question.answers.each do |answer| %>
      <li><%= answer.answer %></li>
    <% end %>
  </ul>
</p>



<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
