<h1>Listing answers</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) if can?(:edit, answer) %></td>
    <td><%= link_to 'Destroy', answer, confirm: 'Are you sure?', method: :delete if can?(:destroy, answer) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Answer', new_answer_path if can?(:create, answer) %>
